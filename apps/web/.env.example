# Database Connection
DATABASE_URL=postgresql://user:password@postgres:5432/mekangezer

# NextAuth Configuration
# NextAuth v5 uses AUTH_URL (NEXTAUTH_URL is deprecated but still supported)
AUTH_URL=https://your-domain.com
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=generate-a-random-secret-here

# Admin Default Password (for seed file)
# Generate a strong password (at least 12 characters, mixed case, numbers, symbols)
ADMIN_DEFAULT_PASSWORD=your-secure-admin-password

# Public URLs
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_CHAT_URL=https://your-domain.com/chat
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token-here

# Grupo Pro (Optional)
GRUPO_PRO_API_URL=http://grupo-pro:8080/api
GRUPO_PRO_API_KEY=
GRUPO_PRO_SSO_SECRET=your-sso-secret-here

# Redis (Optional)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-redis-password

# Application Ports
PORT=3000
